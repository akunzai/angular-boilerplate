{
  "name": "angular-boilerplate",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.14.4",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0",
    "build": "ng build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "i18n:extract": "ngx-translate-extract -i ./src -o ./src/locales/{en,zh-Hant}.json --null-as-default-value --sort --clean"
  },
  "dependencies": {
    "@angular/animations": "^19.0.1",
    "@angular/common": "^19.0.1",
    "@angular/compiler": "^19.0.1",
    "@angular/core": "^19.0.1",
    "@angular/forms": "^19.0.1",
    "@angular/platform-browser": "^19.0.1",
    "@angular/platform-browser-dynamic": "^19.0.1",
    "@angular/router": "^19.0.1",
    "@ngx-translate/core": "^16.0.3",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "rxjs": "^7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^19.0.2",
    "@angular/cli": "^19.0.2",
    "@angular/compiler-cli": "^19.0.1",
    "@angular/localize": "^19.0.1",
    "@biesbjerg/ngx-translate-extract": "^7.0.4",
    "@testing-library/angular": "^17.3.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.3",
    "angular-eslint": "^19.0.0",
    "eslint": "^9.17.0",
    "jest": "~29.7.0",
    "jest-fixed-jsdom": "^0.0.9",
    "jest-preset-angular": "^14.4.1",
    "msw": "^2.6.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.16.0"
  },
  "msw": {
    "workerDirectory": [
      "src"
    ]
  }
}
