{
  "name": "angular-boilerplate",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0",
    "build": "ng build",
    "test": "ng test --watch=false",
    "test:watch": "ng test --watch",
    "test:coverage": "ng test --watch=false --coverage",
    "lint": "ng lint",
    "i18n:extract": "ngx-translate-extract -i ./src -o ./src/locales/{en,zh-Hant}.json --null-as-default-value --sort --clean",
    "msw": "pnpm dlx msw init"
  },
  "dependencies": {
    "@angular/animations": "^21.1.2",
    "@angular/common": "^21.1.2",
    "@angular/compiler": "^21.1.2",
    "@angular/core": "^21.1.2",
    "@angular/forms": "^21.1.2",
    "@angular/platform-browser": "^21.1.2",
    "@angular/platform-browser-dynamic": "^21.1.2",
    "@angular/router": "^21.1.2",
    "@ngx-translate/core": "^17.0.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.2",
    "@angular/localize": "^21.1.2",
    "@biesbjerg/ngx-translate-extract": "^7.0.4",
    "@testing-library/angular": "^19.0.0",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "angular-eslint": "^21.2.0",
    "eslint": "^9.39.2",
    "jsdom": "^28.0.0",
    "msw": "^2.12.8",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18",
    "web-streams-polyfill": "^4.2.0"
  },
  "msw": {
    "workerDirectory": [
      "src"
    ]
  },
  "pnpm": {
    "overrides": {
      "hono": ">=4.11.7"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "lmdb",
      "msgpackr-extract",
      "msw",
      "unrs-resolver"
    ]
  }
}