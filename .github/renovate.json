{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "github>visualon/renovate-config:ng"
  ],
  "automerge": true,
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],
  "packageRules": [
    {
      "description": "Update the worker file for msw",
      "matchPackageNames": [
        "msw"
      ],
      "postUpgradeTasks": {
        "commands": [
          "yarn install"
        ],
        "fileFilters": [
          "**/mockServiceWorker.js"
        ]
      }
    }
  ]
}
